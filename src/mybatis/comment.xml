<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- sql mapper   -->  
<mapper namespace="comment" >
	<insert id="insert" parameterType="Comment">
		insert into comment (writingIdx,userId,content)
		values(#{writingIdx},#{userId},#{content})
	</insert>
	
	<select id="getComments" parameterType="int" resultType="Comment">
	select * from comment where writingIdx =#{writingIdx}
	</select>
	
	<delete id="delete" parameterType="int">
		delete from comment where idx = #{idx}
	</delete>

	<insert id="insert" parameterType="Freeboard">
		insert into writing (categoryIdx,userId,subject,content)
		values(#{categoryIdx},#{userId},#{subject},#{content})
	</insert>

</mapper>